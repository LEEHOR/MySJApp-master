<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/GhostWhite"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/login_toolbar"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:background="@drawable/icon_home_top_bg"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382">

        <androidx.cardview.widget.CardView
            android:alpha="0.95"
            android:id="@+id/login_center_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/login_center_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal"
                    android:text="腾云金服"
                    android:textColor="@color/textColor"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:src="@drawable/shouji" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        app:hintTextAppearance="@style/TextEditInput"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <!--    <TextView
                            android:id="@+id/login_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:padding="5dp"
                            android:text="账号"
                            android:textColor="@color/textColor"
                            android:textSize="14dp" />-->

                   <!--     <EditText
                            android:inputType="textPassword"
                            android:id="@+id/login_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/login_text1"
                            android:background="@null"
                            android:hint="手机号/商户编号"
                            android:lines="1"
                            android:padding="5dp"
                            android:textSize="14dp" />-->

                     <!--   <ImageView
                            android:id="@+id/login_clear_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/login_account"
                            android:layout_alignBottom="@+id/login_account"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/roundclose"
                            android:visibility="invisible" />-->


                        <com.google.android.material.textfield.TextInputEditText
                            android:textCursorDrawable="@drawable/shape_text_cursor"
                            android:gravity="center_vertical"
                            android:id="@+id/login_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:lines="1"
                            android:padding="0dp"
                            android:textSize="14dp"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/base_hint_text_color"
                            android:hint="请输入手机号或商户号"
                            android:inputType="textVisiblePassword" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/linaColor1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:src="@drawable/lock" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        app:hintTextAppearance="@style/TextEditInput"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                 <!--       <TextView
                            android:id="@+id/login_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:padding="5dp"
                            android:text="密码"
                            android:textColor="@color/textColor"
                            android:textSize="14dp" />-->
                        <com.google.android.material.textfield.TextInputEditText
                            android:textCursorDrawable="@drawable/shape_text_cursor"
                            android:gravity="center_vertical"
                            android:id="@+id/login_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:lines="1"
                            android:padding="0dp"
                            android:textSize="14dp"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/base_hint_text_color"
                            android:hint="请输入登录密码"
                            android:inputType="textPassword" />
                        <!--<EditText
                            android:id="@+id/login_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="请输入登录密码"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:padding="5dp"
                            android:textSize="14dp" />-->
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <View
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/linaColor1"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"/>
                <TextView
                    android:id="@+id/login_submit"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/submit_button_selector"
                    android:enabled="true"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="登录"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/login_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="注册账号"
                        android:textColor="@color/textColor"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/login_forget_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="忘记密码?"
                        android:textColor="@color/textColor"
                        android:textSize="14dp" />
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="8dp"
           app:cardElevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/app_deskt" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/login_version_code"
            android:textSize="14dp"
            android:textColor="@color/textColor"
            android:text="版本信息:1.0.0"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_center_cardView"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>