<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPaddingLeft="5dp"
    app:contentPaddingRight="5dp"
    app:contentPaddingTop="10dp"
    app:contentPaddingBottom="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:id="@+id/loanList_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <TextView
              android:padding="5dp"
              android:id="@+id/loanList_name"
              android:textColor="@color/textColor"
              android:textSize="14dp"
              android:layout_width="match_parent"
              android:lines="1"
              android:ellipsize="end"
              android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:padding="2dp"
                    android:id="@+id/loanList_table"
                    android:background="@drawable/shape_text_blue"
                    android:textSize="12dp"
                    android:textColor="@color/blue3"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/loanList_des"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:textColor="@color/textColor2"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/linaColor1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/loanList_submit"
                android:layout_gravity="center_horizontal"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:text="@string/submit_10"
                android:padding="5dp"
                android:background="@drawable/submit_button_selector"
                android:layout_width="200dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>