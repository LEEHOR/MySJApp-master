    <!--Toolbar 样式-->
    <style name="Toolbar_Style" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- toolbar标题样式 -->
    <style name="Toolbar_Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <!--状态栏显示与导航栏同色方案-->
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar" />


    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/blue2</item>
        <item name="android:colorControlNormal">@color/tab_text_normal</item>
    </style>

